<% layout('layouts/boilerplate') %>
<%- include('../partials/flash') %>
<section class="media">
    <h1 class="page-title">Trending Movies</h1>
    <div class="media-cards-container">
        <% for (let movie of movies) { %>
        <div class="media-card">
            <a href="/movie/<%= movie.id %>">
                <img class="media-img" id="index-image" src="https://image.tmdb.org/t/p/w342<%= movie.poster_path %>">
            </a>
            <div class="media-card-body">
                <h4><a class="linked-title" href="/movie/<%= movie.id %>"><%= movie.title %></a></h4>
                <p><i class="fas fa-star"></i> <%= movie.vote_average %></p>
            </div>
        </div>
        <% } %>
    </div>
</section>